.app {
    width: 100%;
    background: linear-gradient(180deg, #F36910 0%, #FFBF3E 100%);
    height: 100vh;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    overflow-x: hidden;
}

.header {
    position: relative;
    text-align: center;
    width: 100%;
    font-size: 34rpx;
    height: 60rpx;
    color: #fff;
    line-height: 60rpx;
}

.login-btn {
    position: absolute;
    left: 12rpx;
    min-width: 180rpx;
    height: 54rpx;
    padding: 0 10rpx;
    top: 10rpx;
    font-size: 28rpx;
    line-height: 52rpx;
    color: #fff;
    border: 1rpx solid rgba(255, 255, 255, 0.7);
    background: linear-gradient(315deg, #FF9025 0%, #FFBF3E 100%);
    border-radius: 30rpx;
}

.avatar-wrap {
    width: 64rpx;
    height: 64rpx;
    border: 6rpx solid rgb(245, 213, 184);
    border-radius: 50%;
    position: absolute;
    top: 8rpx;
    left: 40rpx;
}

.avatar-box {
    width: 100%;
    border-radius: 50%;
    overflow: hidden;
    height: 100%;
}

.popover {
    position: absolute;
    visibility: hidden;
    left: -16rpx;
    top: 76rpx;
    background: #fff;
    z-index: 9;
    border-radius: 4rpx;
    padding: 0 16rpx;
    box-shadow: 0px 3rpx 12rpx rgba(195, 37, 38, 0.5);
    width: 264rpx;
    opacity: 0;
    transform: rotate3d(0, 0, 10px, 10deg);
    transition: all .3s;
}

.popover.active {
    visibility: visible;
    opacity: 1;
}

.popover::before {
    content: '';
    display: block;
    top: -21rpx;
    left: 30rpx;
    position: absolute;
    border: 12rpx solid transparent;
    border-bottom-color: #fff;
}

.popover-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 8
}

.popover .popover-list .item {
    line-height: 108rpx;
    color: #333;
    border-bottom: 1rpx solid rgba(0, 0, 0, .1);
}

