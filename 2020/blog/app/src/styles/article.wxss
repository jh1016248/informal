.article-list .item {
  border-bottom: 1px solid #f2f2f2;
  display: flex;
  padding-bottom: 10px;
}
.article-list .item .article-container {
  flex: 1;
  margin-right: 40px;
}
.article-list .item .article-container .title {
  color: #333;
  font-size: 18px;
  line-height: 1.2;
  text-align: left;
  padding: 10px 0;
}
.article-list .item .article-container .title:hover {
  cursor: pointer;
}
.article-list .item .article-container img {
  max-width: 100%;
}
.article-list .item .article-thumb {
  width: 100px;
  margin-top: 10px;
  height: 100px;
}
.article-list .item .article-thumb img {
  width: 100%;
}
.article-container .title {
  font-size: 24px;
  font-weight: 400;
  padding: 20px 0;
  text-align: center;
}
.article-container .container-main {
  clear: both;
  overflow: hidden;
}
.article-container .media-wrap img {
  max-width: 100%;
}
