.comment-container .comment-title {
  text-align: center;
  color: #8a9aa9;
  font-size: 16px;
  padding: 1.67rem 0 5px;
}
.comment-container .comment-form {
  display: flex;
  position: relative;
  padding: 1rem 1.333rem;
  background-color: #fafbfc;
  border-radius: 3px;
  margin: 1.333rem 0;
}
.comment-container .comment-form .avatar-box .avatar {
  margin: 0 1rem 0 0;
  width: 2.667rem;
  height: 2.667rem;
  border-radius: 50%;
}
.comment-container .comment-form .form-box {
  flex: 1 1 auto;
  position: relative;
}
.comment-container .comment-form .form-box .input-box {
  font-size: 0;
  background-color: #fff;
  border: 1px solid #f1f1f1;
  border-radius: 3px;
}
.comment-container .comment-form .form-box .comment-input {
  display: block;
  box-sizing: border-box;
  position: relative;
  padding: .6rem 1rem;
  font-size: 1.083rem;
  line-height: 1.7;
  color: #17181a;
  border: none;
  width: 100%;
  outline: none;
}
.comment-container .comment-form .form-box .comment-input:before {
  content: attr(placeholder);
  position: absolute;
  opacity: .4;
  pointer-events: none;
  user-select: none;
}
.comment-container .comment-list {
  margin: 0 1.666rem 0 4.85rem;
}
.comment-container .comment-list .comment-item {
  display: flex;
}
.comment-container .comment-list .comment-item .avatar {
  width: 30px;
  height: 30px;
}
.comment-container .comment-list .comment-item .avatar img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.comment-container .comment-list .comment-item .content-box {
  flex: 1;
  margin-left: 10px;
  border-bottom: 1px solid #f5f5f5;
  padding-bottom: 10px;
}
.comment-container .comment-list .comment-item .content-box .meta-box {
  margin-bottom: 10px;
}
