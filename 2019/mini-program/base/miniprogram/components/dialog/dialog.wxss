.model_dialog {
    position: fixed;
    visibility: hidden;
    left: 0;
    top: 0;
    bottom: 0;
    z-index: 11;
    right: 0;
}

.model_dialog.active {
    visibility: inherit;
}

.model_dialog .modal-mask {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    background: #000;
    opacity: 0;
    transition: all 0.3s;
}

.model_dialog.active .modal-mask {
    opacity: 0.5;
}

.container {
    position: absolute;
    z-index: 2;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 770rpx;
    background: #fff;
    transition: all 0.3s;
    transform: translateY(100%);
}

.model_dialog.active .container {
    transform: translateY(0);
}

.title{
    position: relative;
    line-height: 100rpx;
    text-align: center;
}
.title.border{
    border-bottom: 1rpx solid #ebebeb;
}
.content{
    max-height: 570rpx;
    overflow-y: auto;
}
.footer-btn{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
}
.btn-red{
    background: #d72c2a;
    color: #fff;
    font-size: 36rpx;
    border-radius: 0;
}


.icon-close{
    position: absolute;
    right: 30rpx;
    top: 25rpx;
    width: 50rpx;
    height: 50rpx;
}
.icon-close image{
    width: 21rpx;
    height: 21rpx;
    vertical-align: top;
    margin: 15rpx auto;
}
.mini-modal .container{
    height: auto;
    min-height: 430rpx;
}
.mini-modal .content{
    min-height: 330rpx!important;
    margin-bottom: 40rpx;
}